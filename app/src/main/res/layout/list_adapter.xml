<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingLeft="@dimen/list_adapter_left_and_right_margin"
    android:paddingRight="@dimen/list_adapter_left_and_right_margin"
    android:paddingTop="@dimen/list_adapter_top_and_bottom_margin"
    android:paddingBottom="@dimen/list_adapter_top_and_bottom_margin"
    tools:context="com.example.smson.hello.tour_list.TourListMainActivity">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_list_main_img"
            android:scaleType="centerCrop"
            android:background="#FFFFFF"
            android:layout_margin="1dp"
            android:src="@drawable/girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_list_main_title"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_list_main_date"
            android:gravity="center_vertical|center"
            android:layout_width="76dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_list_main_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/iv_list_sub_img1"
            android:scaleType="centerCrop"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:src="@drawable/car"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:background="#FFFFFF"
            android:layout_width="4dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_list_sub_img2"
            android:scaleType="centerCrop"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:src="@drawable/girl"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:background="#FFFFFF"
            android:layout_width="4dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_list_sub_img3"
            android:scaleType="centerCrop"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:src="@drawable/gold_apple"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:background="#FFFFFF"
            android:layout_width="4dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_list_sub_img4"
            android:scaleType="centerCrop"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:src="@drawable/girl"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:background="#FFFFFF"
            android:layout_width="4dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_list_sub_img5"
            android:scaleType="centerCrop"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:src="@drawable/car"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>